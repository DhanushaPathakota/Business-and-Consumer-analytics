<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <title>My Chart.js Chart</title>
</head>

<%ids.forEach(function(it){%>
<div class="chart-container" style="position: relative; float: left;height:10vh; width:20vw">

    <canvas id="myChart<%=it%>"></canvas>

</div>
  <%});%>
  <%ids.forEach(function(it){%>
<canvas id="myChart<%=it%>" width="200px" height="200px"></canvas>
  <%});%>
<script>

  <%ids.forEach(function(it,i){%>
var ctx = document.getElementById('myChart<%=it%>').getContext('2d');

//for(i=0;i<6;i=i+1)
//{
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [<%= tim[i]%>],
        datasets: [{
            label: 'time taken by employee: '+<%=it%>,
            data: [<%= tim[i]%>],

            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
//}
  <%});%>
</script>

</body>

</html>
